pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'calculator_python'
        GITHUB_REPO_URL = 'https://github.com/saurabhv0903/SPE_miniproject.git'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

	
        stage('Run Main Application') {
            steps {
                script {
                    sh 'python3 /app/calculator_main.py'
                }
            }
        }


        stage('Run Tests') {
            steps {
                script {
                    sh 'python3 /app/calculator_test.py'
                }
            }
        }


        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    docker.withRegistry('', 'DockerHubCred') {
                    sh 'docker tag calculator_python saurabhv09/calculator_python:latest'
                    sh 'docker push saurabhv09/calculator_python'
                    }
                 }
            }
        }

   stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                     )
                }
            }
        }

    }
}
